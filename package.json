{
  "name": "chill-ui-monorepo",
  "version": "0.0.2",
  "private": true,
  "description": "Monorepo for Chill UI - React Native component library",
  "homepage": "https://github.com/chillui/chill-ui",
  "bugs": {
    "url": "https://github.com/chillui/chill-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chillui/chill-ui.git"
  },
  "license": "MIT",
  "author": "Amir Meberbeche <amir.meb398@gmail.com>",
  "scripts": {
    "build:hybrid": "cd generated/core-hybrid && bunx bob build",
    "build:tailwind": "cd generated/core-tailwind && bunx bob build",
    "build:stylesheet": "cd generated/core-stylesheet && bunx bob build",
    "build:all": "bun run build:tailwind && bun run build:stylesheet",
    "generate:cors": "node scripts/generate-cors.js",
    "generate:cors:all": "node scripts/generate-cors.js all",
    "lint:generated-cors": "bunx eslint --ignore-pattern '**/lib/**' generated/**",
    "lint:generated-cors:fix": "bunx eslint --ignore-pattern '**/lib/**' generated/** --fix",
    "prettier:generated-cors": "bunx prettier --ignore-pattern '**/lib/**' generated/** --write",
    "ts:check:generated-cors": "for dir in generated/*/; do echo \"Checking $dir\"; bunx tsc --noEmit --skipLibCheck --jsx react-jsx --project \"${dir}tsconfig.json\" || exit 1; done",
    "check:generated-cors": "bun run ts:check:generated-cors && bun run lint:generated-cors",
    "check:main-core": "cd chill-ui-core && bun run ts:check && bun run lint",
    "pack:stylesheet": "cd generated/core-stylesheet && npm pack",
    "pack:tailwind": "cd generated/core-tailwind && npm pack",
    "pack:all": "bun run pack:stylesheet && bun run pack:tailwind",
    "replace:version": "node scripts/replace-version.js",
    "release": "semantic-release --extends ./packages/chill-ui-core/.releaserc.json",
    "convert:aliases": "node scripts/convert-aliases-to-relative.js",
    "check:components-docs": "node scripts/check-components.js",
    "check:components-docs:report": "node scripts/check-components.js --report"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/react": "^19.2.6",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.4.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-perfectionist": "^4.13.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-storybook": "^9.1.12",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lefthook": "^1.11.12",
    "prettier": "^3.2.5",
    "react-native-builder-bob": "^0.30.2",
    "semantic-release": "^25.0.2"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "release-it": {
    "git": {
      "commitMessage": "Release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "nativewind": "^4.2.1",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-svg": "^15.15.0",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.1.1"
  }
}
